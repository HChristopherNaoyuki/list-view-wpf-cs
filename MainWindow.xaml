<Window x:Class="list_view_wpf_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minimal Chat"
        Height="400"
        Width="350"
        MinHeight="300"
        MinWidth="300"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Chat display area -->
            <RowDefinition Height="Auto"/>
            <!-- Input area -->
            <RowDefinition Height="Auto"/>
            <!-- Send button -->
        </Grid.RowDefinitions>

        <!-- Chat history display -->
        <ListView
            x:Name="ChatDisplay"
            Grid.Row="0"
            Background="Transparent"
            BorderThickness="0"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>

        <!-- Message input box -->
        <TextBox
            x:Name="MessageInput"
            Grid.Row="1"
            Margin="0,10,0,0"
            MinHeight="30"
            Padding="5"
            AcceptsReturn="True"
            VerticalContentAlignment="Center"
            TextWrapping="Wrap"
            KeyDown="OnMessageInputKeyDown"/>

        <!-- Send button -->
        <Button
            Grid.Row="2"
            Margin="0,10,0,0"
            Padding="10,5"
            Content="Send"
            Click="OnSendClick"
            IsDefault="True"/>
    </Grid>
</Window>